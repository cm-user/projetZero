{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Catégories</h1>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id du Produit</th>
                <th>Nom Catégorie</th>
                <th>Dossier</th>
                <th>Temps(min)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.idProduct }}</td>
                <td>{{ category.surname }}</td>
                <td>{{ category.folder }}</td>
                <td>{{ category.time }}</td>
                <td>

                            <a  class="btn btn-info" href="{{ path('category_show', { 'id': category.id }) }}">show</a>

                            <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a class="btn btn-success" href="{{ path('category_new') }}">Ajouter un nouveau ID produit</a>

{% endblock %}
