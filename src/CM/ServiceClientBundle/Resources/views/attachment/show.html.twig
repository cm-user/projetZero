{% extends 'base.html.twig' %}

{% block body %}
    <h1>Attachment</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attachment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ attachment.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ attachment.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('attachment_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('attachment_edit', { 'id': attachment.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
