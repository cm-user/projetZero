{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bond</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bond.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bond.name }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ bond.path }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if bond.createdAt %}{{ bond.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if bond.updatedAt %}{{ bond.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bond_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bond_edit', { 'id': bond.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
