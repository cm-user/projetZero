{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des categories</h1>

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Surnom</th>
            <th>Dossier</th>
            <th>Nom du gabarit</th>
            <th>Image du gabarit</th>
            <th>Nombre de gravure</th>
            <th>Machine liée</th>
            <th>Date de création</th>
            <th>Date de modification</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.surname }}</td>
                <td>{{ category.folder }}</td>
                <td>{{ category.name_gabarit }}</td>
                <td> <img src="{{ category.path_gabarit }}" alt="{{ category.path_gabarit }}" width="100"></td>
                <td>{{ category.max_gabarit }}</td>
                <td>{{ getNameMachine(category.id_machine) }}</td>
                <td>{{ category.created_at }}</td>
                <td>{{ category.updated_at }}</td>
                <td>
                    <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('category_new') }}">Ajouter</a>

{% endblock %}
